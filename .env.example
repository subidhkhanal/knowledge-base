# Groq Configuration (PRIMARY - Free Cloud API)
# Get your free API key at https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Ollama Configuration (Optional local fallback)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
USE_OLLAMA_FALLBACK=false

# Whisper Configuration (Local audio transcription)
WHISPER_MODEL=base

# Google OAuth Configuration (Required for authentication)
# Get your credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
