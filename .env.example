# Pinecone Configuration (Vector Database - Free tier: 100K vectors)
# Get your free API key at https://app.pinecone.io
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=knowledge-base

# Cohere Configuration (Embeddings & Reranking - Free tier available)
# Get your free API key at https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your_cohere_api_key_here
COHERE_EMBED_MODEL=embed-english-v3.0

# Re-ranking (uses Cohere - 1000 req/month free)
USE_RERANKING=true
RERANK_MODEL=rerank-english-v3.0
RERANK_TOP_K=5

# Groq Configuration (LLM - Free Cloud API)
# Get your free API key at https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Ollama Configuration (Optional local fallback)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
USE_OLLAMA_FALLBACK=false

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
